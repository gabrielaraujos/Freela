<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.freela.fragment.PerfilFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/voltar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="left"
            android:layout_margin="20dp"
            android:src="@drawable/ic_usuario"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#333333"
            android:textSize="20dp"
            android:text="Ziggy Stardust"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#333333"
            android:textSize="20dp"
            android:text="ziggy@email.com"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#333333"
            android:textSize="20dp"
            android:text="Desenvolvedor de Softwares"
            />

        <TextView
            android:id="@+id/dtFimTextVew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#333333"
            android:textSize="20dp"
            android:text="Fortaleza - CE, Brasil"
            />

        <Button
            android:id="@+id/sair"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="90dp"
            android:textColor="#FFFFFF"
            android:background="#f44336"
            android:textSize="20dp"
            android:text="Sair"
            />



    </LinearLayout>
</ScrollView>










