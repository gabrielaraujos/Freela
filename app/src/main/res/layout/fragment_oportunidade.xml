<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.freela.fragment.OportunidadeFragment"
    android:id="@+id/activity_registro_oportunidade"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:weightSum="1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="20dp"
        android:text="@string/bt_voltar"
        android:id="@+id/oportunidade_bt_voltar" />

    <EditText
        android:id="@+id/oportunidade_et_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:inputType="text"
        android:hint="Título"
        android:layout_below="@+id/oportunidade_bt_voltar" >
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/oportunidade_et_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:inputType="text"
        android:hint="Descrição"
        android:layout_below="@+id/oportunidade_et_titulo" />


    <RelativeLayout
        android:id="@+id/oportunidade_periodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:text="Inicio Projeto"
            android:textColor="#333333"
            android:id="@+id/oportunidade_dt_inicial"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/oportunidade_dt_inicial"
            android:layout_margin="20dp"
            android:textSize="25dp"
            android:text="/"
            android:id="@+id/oportunidade_separator"
            android:textColor="#333333"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/oportunidade_separator"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:text="Fim Projeto"
            android:textColor="#333333"
            android:id="@+id/oportunidade_dt_final"/>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/bt_salvar"
        android:id="@+id/oportunidade_bt_salvar"
        android:layout_below="@+id/oportunidade_periodo" />

</LinearLayout>



